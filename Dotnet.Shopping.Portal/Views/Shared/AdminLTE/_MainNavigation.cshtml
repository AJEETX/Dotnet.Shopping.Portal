@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

<aside id="sideBar" class="main-sidebar elevation-4">
    <!-- Brand Logo -->
    <a class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Dotnet.Shop</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="pull-left image">
                <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image"><i class="fa fa-circle text-success"></i>
            </div>
            <div class="pull-left info">
                <a class="nav-link">@UserManager.GetUserName(User)</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                @if (User.IsInRole("Admin"))
                {
                    <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-tv"></i><span>Main Store</span></a></li>
                    <li class="nav-item menu-open">
                        <a href="/Admin" class="nav-link active">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Dashboard
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="#" class="nav-link active">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Active Page</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Inactive Page</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li id="menu-catalog" class="treeview">
                        <!-- catalog tree bar -->
                        <a href="#">
                            <i class="fa fa-book"></i> <span>Catalog</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a id="menu-catalog-product" asp-controller="Product" asp-action="List"><i class="fa fa-circle-o"></i><span>Product</span></a></li>
                            <li><a id="menu-catalog-category" asp-controller="Category" asp-action="List"><i class="fa fa-circle-o"></i><span>Category</span></a></li>
                            <li><a id="menu-catalog-manufacturer" asp-controller="Manufacturer" asp-action="List"><i class="fa fa-circle-o"></i><span>Manufacturer</span></a></li>
                            <li><a id="menu-catalog-specification" asp-controller="Specification" asp-action="List"><i class="fa fa-circle-o"></i><span>Specification</span></a></li>
                            <li><a id="menu-catalog-imageManager" asp-controller="ImageManager" asp-action="Index"><i class="fa fa-circle-o"></i><span>Image Manager</span></a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="UserRoles" asp-action="Index">User Roles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="RoleManager" asp-action="Index">Role Manager</a>
                    </li>
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-home"></i>
                            <p>
                                Home
                            </p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Privacy" class="nav-link">
                            <i class="nav-icon fas fa-lock"></i>
                            <p>
                                Privacy
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Simple Link
                                <span class="right badge badge-danger">New</span>
                            </p>
                        </a>
                    </li>
                }
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>